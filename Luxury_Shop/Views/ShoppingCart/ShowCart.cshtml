@model Luxury_Shop.Models.Cart

@{
    ViewBag.Title = "ShowCart";
}

<h2>Giỏ Hàng</h2>
<a href="@Url.Action("Index", "Product")">Tiếp tục mua hàng</a>
@if (Model != null)
{
    <table class="table">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Product.OriginalPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.OriginalPrice * item.Quantity)</td>
                <td>
                    <a href="@Url.Action("RemoveItem", "Cart", new { id = item.Product.ProductID })">Xóa</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="3">Tổng tiền</td>
            <td>@Model.Total_Money()</td>
        </tr>
    </table>
}
