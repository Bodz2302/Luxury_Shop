@model Luxury_Shop.Models.OrderViewModel

<h2>Your Cart</h2>

<!-- Hiển thị giỏ hàng -->
@if (Model.Cart != null && Model.Cart.Items.Any())
{
    foreach (var item in Model.Cart.Items)
    {
        <div>
            <p>@item.Product.ProductName</p>
            <p>Quantity: @item.Quantity</p>
            <p>Price: @string.Format("{0:N0} vnd", item.Product.OriginalPrice)</p>
            <p>Total: @string.Format("{0:N0} vnd", item.Product.OriginalPrice * item.Quantity)</p>
        </div>
    }

    <!-- Hiển thị tổng tiền -->
    <p><strong>Total: @string.Format("{0:N0} vnd", Model.Cart.GetTotalAmount())</strong></p>

    <!-- Thêm nút thanh toán -->
    <div class="checkout">
        <form action="@Url.Action("Index", "Checkout")" method="post">
            <button type="submit" class="btn checkout-btn">Thanh toán</button>
        </form>
    </div>
}
else
{
    <p>Your cart is empty.</p>
}
