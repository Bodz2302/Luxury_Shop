@model Luxury_Shop.Models.Cart

@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>Giỏ Hàng</h2>
<a href="@Url.Action("Index", "Product")">Tiếp tục mua hàng</a>

@if (Model != null && Model.Items.Any())
{
    <table class="table">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Product.OriginalPrice.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.OriginalPrice * item.Quantity).ToString("C")</td>
                <td>
                    <a href="@Url.Action("RemoveItem", "ShoppingCart", new { id = item.Product.ProductID })">Xóa</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="3">Tổng tiền</td>
            <td>@Model.Total_Money().ToString("C")</td>
        </tr>
    </table>
}
else
{
    <p>Giỏ hàng của bạn hiện chưa có sản phẩm nào.</p>
}
