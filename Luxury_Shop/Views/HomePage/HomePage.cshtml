@model IEnumerable<Luxury_Shop.Models.Product>

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <header>
        <!-- Header Content Here -->
    </header>

    <article>
        <div class="sanpham-container">
            @foreach (var item in Model)
            {
                <div class="sanpham">
                    <!-- Hiển thị ảnh sản phẩm -->
                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="~/img/@item.ImageURL" alt="@item.ProductName" class="sanpham-img" />
                    }
                    <h3>@item.ProductName</h3>
                    <p class="gia">Giá: @item.OriginalPrice.ToString("C")</p> <!-- Hiển thị giá sản phẩm -->
                    <a href="@Url.Action("Details", "Details", new { id = item.ProductID })">
                        <button class="btn-detail">Chi tiết</button>
                    </a>
                </div>
            }
        </div>
    </article>
</body>
</html>
