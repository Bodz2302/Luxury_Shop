@model IEnumerable<Luxury_Shop.Models.Product>

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Style1.css?v=@DateTime.Now.Ticks">
</head>
<body>
    <header>
        <div class="bannerweb">
            <img src="~/Content/images/BANNER.jpeg" alt="SALE NOW ON: UP TO 50% OFF" />
            <div class="banner-title">SALE NOW ON: UP TO 50% OFF</div>
        </div>
    </header>
    <article>
        <div class="sanpham-container">
            @foreach (var item in Model)
            {
                <div class="sanpham">
                    <a href="@Url.Action("Details", "Details", new { id = item.ProductID })">
                        <img src="@Url.Content("~/img/" + item.ImageURL)" alt="@item.ProductName" class="sanpham-img" />
                    </a>
                    <h3>@item.ProductName</h3>
                    <p class="gia">Giá: @item.OriginalPrice.ToString("C")</p>
                </div>
            }
        </div>

        <script>
            // Thêm animation khi scroll
            document.addEventListener('DOMContentLoaded', function () {
                const products = document.querySelectorAll('.sanpham');

                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }
                    });
                }, {
                    threshold: 0.1
                });

                products.forEach(product => {
                    product.style.opacity = '0';
                    product.style.transform = 'translateY(20px)';
                    observer.observe(product);
                });
            });

            // Thêm hiệu ứng ripple cho nút chi tiết
            document.querySelectorAll('.btn-detail').forEach(button => {
                button.addEventListener('click', function (e) {
                    let x = e.clientX - e.target.offsetLeft;
                    let y = e.clientY - e.target.offsetTop;

                    let ripple = document.createElement('span');
                    ripple.style.left = x + 'px';
                    ripple.style.top = y + 'px';

                    this.appendChild(ripple);

                    setTimeout(() => {
                        ripple.remove();
                    }, 1000);
                });
            });
            JavaScript
            const products = document.querySelectorAll('.sanpham');

            products.forEach(product => {
                const productName = product.querySelector('h3');

                product.addEventListener('mouseover', () => {
                    productName.style.textDecoration = 'underline';
                });

                product.addEventListener('mouseout', () => {
                    productName.style.textDecoration = 'none';
                });
            });
        </script>
    </article>
</body>
</html>
