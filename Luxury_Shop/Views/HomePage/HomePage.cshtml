    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <header>
    </header>

    <article>


        <div class="sanpham-container">
            @foreach (var item in Model)
            {
                <div class="sanpham">
                    <!-- Cập nhật đường dẫn hình ảnh sản phẩm -->
                    <img src="~/img/@item.ImageURL" alt="@item.ProductName" />
                    <h3>@item.ProductName</h3>
                    <p class="gia">Giá: @item.OriginalPrice.ToString("C")</p> <!-- Hiển thị giá sản phẩm -->
                    <a href="@Url.Action("Chitietsanpham", "Home", new { id = item.ProductID })">
                        <button>Chi tiết</button>
                    </a>
                </div>
            }
        </div>
    </article>

