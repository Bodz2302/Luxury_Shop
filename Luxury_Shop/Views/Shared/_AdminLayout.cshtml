<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    @RenderSection("Styles", required: false)
    <link href="~/Content/Admin/adminlayout.css" rel="stylesheet" />
</head>
<body>
    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">Trang quản lý Admin</div>
            <nav class="menu">
                @Html.ActionLink("Trang chủ", "Dashboard", "Users", null, new { @class = "menu-link" })
                @Html.ActionLink("Quản lý tài khoản", "Index", "Users", null, new { @class = "menu-link" })
                @Html.ActionLink("Quản lý người dùng", "Quanlykh", "Users", null, new { @class = "menu-link" })
                @Html.ActionLink("Quản lý sản phẩm", "Index", "Products", null, new { @class = "menu-link" })
                @Html.ActionLink("Quản lý danh mục", "Index", "Categories", null, new { @class = "menu-link" })
                @Html.ActionLink("Quản lý thương hiệu", "Index", "Brands", null, new { @class = "menu-link" })
                @Html.ActionLink("Quản lý đơn hàng", "Index", "quanlydonhang", null, new { @class = "menu-link" })
                @Html.ActionLink("Đăng xuất", "logout", "Users", new { id = @ViewBag.account_id }, new { @class = "logout" })

            </nav>
        </aside>

        <!-- Main content -->
        <main class="content">
            <header class="topbar">
                <h1> Trang Admin</h1>
                <div class="user-info">
                    <span>Xin chào Admin - @ViewBag.use</span>
                    <img src="~/Content/images/admin.png" alt="Avatar" class="avatar">
                </div>
            </header>
            <section class="main-content">
                @RenderBody()
            </section>
        </main>
    </div>    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
